{
  "name": "@storex/db-controller",
  "version": "1.1.1",
  "description": "Utils for db and routing ...",
  "main": "lib/index.js",
  "scope": "@storex",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "release": "rm -rf lib && tsc --sourceMap false && npm test && npm publish --access=public && npm version patch"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "author": "Moshe Kabala",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.6.1",
    "express": "^4.16.4",
    "mongodb": "^2.2.33",
    "mysql": "^2.16.0"
  },
  "devDependencies": {
    "@types/mongodb": "^2.2.18",
    "@types/mysql": "^2.15.5",
    "jest": "^23.3.0",
    "lerna": "^3.15.0",
    "ts-jest": "^23.0.0"
  },
  "keywords": [
    "@storex/core",
    "storex",
    "store",
    "state",
    "MySql",
    "MongoDB",
    "common state",
    "redux",
    "flux",
    "react",
    "stencil",
    "alt",
    "observer",
    "observable",
    "mobx-state-tree"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moshe-kabala/StoreX"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": "\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
