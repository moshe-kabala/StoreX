{
  "name": "@storex/container",
  "version": "1.1.3",
  "description": "Contain some container to hold the data",
  "main": "lib/index.js",
  "scope": "@storex",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "update-dependence": "npm update @storex/core",
    "release": "npm run update-dependence && rm -rf lib && tsc --sourceMap false && npm test && npm publish --access=public && npm version patch"
  },
  "author": "Moshe Kabala",
  "license": "MIT",
  "dependencies": {
    "@storex/core": "^1.1.0",
    "@storex/utils": "^1.1.0",
    "immutable": "^3.8.2",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.12.10",
    "jest": "^23.4.1",
    "ts-jest": "^23.0.1",
    "typescript": "^2.9.2"
  },
  "keywords": [
    "@storex/core",
    "container",
    "storex",
    "store",
    "state",
    "common state",
    "redux",
    "flux",
    "react",
    "stencil",
    "alt",
    "observer",
    "observable",
    "mobx-state-tree"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moshe-kabala/StoreX"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": "\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
